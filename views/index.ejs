<!DOCTYPE html>
<html>
<head>
  <title>Issue Tracker</title>
  <link rel="stylesheet" href="/styles/main.css">
  <style>
    /* Additional CSS styles for the homepage layout */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    
    .header {
      background-color: #333;
      color: #fff;
      padding: 20px;
    }
    
    .menu-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .menu-bar a {
      color: #fff;
      text-decoration: none;
      margin-left: 20px;
      font-size: 18px;
    }
    
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .project-list {
      list-style: none;
      padding: 0;
    }
    
    .project-list li {
      margin-bottom: 10px;
      background-color: #f7f7f7;
      border-radius: 5px;
      padding: 10px;
    }
    
    .project-list li a {
      color: #333;
      text-decoration: none;
      font-weight: bold;
      font-size: 16px;
    }
    
    .create-project-form {
      margin-top: 20px;
      display: none;
    }
    
    .create-project-form.open {
      display: block;
    }
    
    .create-project-form label {
      display: block;
      margin-bottom: 5px;
    }
    
    .create-project-form input,
    .create-project-form textarea {
      width: 100%;
      padding: 5px;
      margin-bottom: 10px;
    }
    
    .create-project-form button {
      background-color: #333;
      color: #fff;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
    
    .footer {
      background-color: #333;
      color: #fff;
      padding: 20px;
      text-align: center;
    }
    
    .footer a {
      color: #fff;
      text-decoration: none;
      margin-left: 10px;
      margin-right: 10px;
    }
    
    .social-media-links {
      margin-top: 10px;
    }
    
    .social-media-links img {
      width: 20px;
      height: 20px;
      margin-left: 5px;
      vertical-align: middle;
    }
    
    /* Full-screen styles */
    html,
    body {
      height: 100%;
    }
    
    body {
      display: flex;
      flex-direction: column;
    }
    
    main {
      flex-grow: 1;
    }
  </style>
  <script>
    function toggleCreateProjectForm() {
      var form = document.getElementById('createProjectForm');
      form.classList.toggle('open');
    }
  </script>
</head>
<body>
  <header class="header">
    <div class="container">
      <div class="menu-bar">
        <h1>Issue Tracker</h1>
        <nav>
          <% menuItems.forEach(item => { %>
            <a href="<%= item.link %>"><%= item.label %></a>
          <% }) %>
        </nav>
      </div>
    </div>
  </header>
  
  <main>
    <div class="container">
      <h2>Projects</h2>
      <ul class="project-list">
        <% projects.forEach(project => { %>
          <li><a href="/issues/<%= project._id %>"><%= project.name %></a></li>
        <% }) %>
      </ul>
      
      <!-- <h2>Create a New Project</h2> -->
    </div>
    <div style="margin: 40px;margin-left: 23%;">
      <button onclick="location.href='/new-project'">Create New Project</button>
    </div>
  </main>
  
  <footer class="footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> All rights reserved.</p>
      <div class="social-media-links">
        <% socialMediaLinks.forEach(link => { %>
          <a href="<%= link.url %>"><img src="<%= link.icon %>" alt="<%= link.name %>"></a>
        <% }) %>
      </div>
    </div>
  </footer>
</body>
</html>
